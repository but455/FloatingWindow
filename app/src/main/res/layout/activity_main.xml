<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    >


    <Button
        android:id="@+id/btn_show_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示FloatView"
        />

    <Button
        android:id="@+id/btn_hide_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐藏FloatView"
        android:layout_below="@id/btn_show_float"
        />

    <Button
        android:id="@+id/btn_state_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态FloatView"
        android:layout_below="@id/btn_hide_float"
        />
</RelativeLayout>
